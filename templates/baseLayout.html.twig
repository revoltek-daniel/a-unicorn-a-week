<!DOCTYPE html>
<html lang="{{ app.request.locale}}">
    <head>
        <title>{{ 'daniel.title'|trans }}</title>

        {{ include('inc/head.html.twig') }}

    </head>
    <body>

     {% if is_granted('ROLE_ADMIN') %}
        <div class="header">
            <div class="grid">
                <div class="col-12">
                    {% block header %}
                        {{ include('inc/mainNavigation.html.twig') }}
                    {% endblock %}
                </div>
            </div>
        </div>
     {% endif %}

        <div class="main">
            <div class="grid">
                <div class="col-12">
                    {% block main %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>