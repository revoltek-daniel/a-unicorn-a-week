<!DOCTYPE html>
<html>
    <head>
        <title>{{ 'daniel.admin.title'|trans }}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

        <link rel="alternate" type="application/rss+xml" title="Feed" href="{{ url('rss') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}

    </head>
    <body>

        <div class="header">
            <div class="grid">
                <div class="col-12">
                    {% block header %}
                        {{ include('inc/mainNavigation.html.twig') }}
                    {% endblock %}
                </div>
            </div>
        </div>

        <div class="main">
            <div class="grid">
                <div class="col-12">
                    {% block main %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>