{% extends 'backendBaseLayout.html.twig' %}

{% block main %}
    <h1>Image</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Titel</th>
                <td>{{ image.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <picture>
                        <source srcset="{{ asset('uploads/images/' ~ image.image ) | imagine_filter('thumb_webp') }}" type="image/webp">
                        <source srcset="{{ asset('uploads/images/' ~ image.image ) | imagine_filter('thumb') }}" type="image/jpeg">
                        <img src="{{ asset('uploads/images/' ~ image.image ) | imagine_filter('thumb') }}" width="120" height="120" alt="{{ image.title }}" title="{{ image.title }}">
                    </picture>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('image_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('image_edit', { 'id': image.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
